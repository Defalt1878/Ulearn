@model uLearn.Web.Core.Controllers.LinkLoginViewModel

@using (Html.BeginForm("DoLinkLogin", "Login", FormMethod.Post, new { provider = Model.Provider, returnUrl = Model.ReturnUrl, id = "link-login-form" }))
{
	@Html.AntiForgeryToken()
}

@section scripts
{
	<script>
		$(document).ready(function() {
			$('#link-login-form').submit();
		});
	</script>
}